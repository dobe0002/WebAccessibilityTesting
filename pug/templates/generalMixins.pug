mixin breadcrumbHome
	nav.container(aria-label=Breadcrumbs)
		ol.breadcrumb
			li.breadcrumb-item
				a(href="../index.html")
					+fa('home','fa-2x') 
					|Home
			block


mixin breadcrumbLandingHome(icon,text,href)
	+breadcrumbHome
		if block
			li.breadcrumb-item
				a(href=href)
					+fa(icon,'fa-2x') 
					| #{text}
		else
			li.active.breadcrumb-item
				+fa(icon,'fa-2x') 
					| #{text}
		block

mixin breadcrumbSamplePageHome
	+breadcrumbLandingHome('cogs','Sample Pages','sampleSite-index.html')
		block

mixin breadcrumbSamplePage
	+breadcrumbSamplePageHome
		li.active.breadcrumb-item
			block

mixin breadcrumbToolPageHome
	+breadcrumbLandingHome('wrench','Tools','tools-index.html')
		block


mixin checkFor(title)
	li
		+fa('check-square-o')
		=title


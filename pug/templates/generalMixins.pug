mixin externalLink(href, extraClasses)
	- extraClasses = extraClasses || ''
	a(href= href target="_blank" class= extraClasses)
		block
		| 
		+faText('external-link','','(new window)')

mixin testingDocLink(heading,text,extraClasses)
	- extraClasses = extraClasses || ''
	- heading = heading || ''
	- var url="https://z.umn.edu/kkd-a11y-testing#heading="+heading
	+externalLink(url, extraClasses)
		=text

mixin howToCheck(heading)
	+testingDocLink(heading,"How to check", "btn btn-outline-dark btn-sm")



mixin fa(type, extraClasses)
	- extraClasses = extraClasses || ''
	- var c='fa fa-'+type+' '+extraClasses
	i(class= c aria-hidden='true')

mixin faText(type, extraClasses, text)
	+fa(type,extraClasses)
	- text = text || ''
	span.sr-only #{text}

mixin alert
	.alert.alert-warning(role="alert")
		+faText('bug','fa-2x','Bug')  
		block

mixin header_block(title, link)  
	header
		h3.main-title #{title}
		ul
			li
				a(href=link, target="_blank")

